<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/all.min.css') }}">
    {% block stylesheets %}
        <style>
            body {
                font-size: .875rem;
            }

            .feather {
                width: 16px;
                height: 16px;
                vertical-align: text-bottom;
            }

            /*
             * Sidebar
             */

            .sidebar {
                position: fixed;
                top: 50px;
                bottom: 0;
                left: 0;
                z-index: 100; /* Behind the navbar */
                padding: 5px 0 0; /* Height of navbar */
                box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            }

            .sidebar-sticky {
                position: relative;
                top: 0;
                height: calc(100vh - 48px);
                padding-top: 15px;
                padding-left: 15px;
                overflow-x: hidden;
                overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
            }

            @supports ((position: -webkit-sticky) or (position: sticky)) {
                .sidebar-sticky {
                    position: -webkit-sticky;
                    position: sticky;
                }
            }

            .sidebar .nav-link {
                font-weight: 500;
                color: #333;
            }

            .sidebar .nav-link .feather {
                margin-right: 4px;
                color: #999;
            }

            .sidebar .nav-link.active {
                color: #007bff;
            }

            .sidebar .nav-link:hover .feather,
            .sidebar .nav-link.active .feather {
                color: inherit;
            }

            .sidebar-heading {
                font-size: .75rem;
                text-transform: uppercase;
            }

            /*
             * Content
             */

            [role="main"] {
                padding-top: 48px; /* Space for fixed navbar */
            }

            /*
             * Navbar
             */

            .navbar-brand {
                padding-top: .75rem;
                padding-bottom: .75rem;
                font-size: 1rem;
                background-color: rgba(0, 0, 0, .25);
                box-shadow: inset -1px 0 0 rgba(0, 0, 0, .25);
            }

            .navbar .form-control {
                padding: .75rem 1rem;
                border-width: 0;
                border-radius: 0;
            }

            .form-control-dark {
                color: #fff;
                background-color: rgba(255, 255, 255, .1);
                border-color: rgba(255, 255, 255, .1);
            }

            .form-control-dark:focus {
                border-color: transparent;
                box-shadow: 0 0 0 3px rgba(255, 255, 255, .25);
            }

        </style>
    {% endblock %}

    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/popper/popper.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/moment/moment.js') }}"></script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>


</head>
<body>
<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">
        {% block logo %}LOGO{% endblock %}
    </a>
    <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
    <ul class="navbar-nav px-3">
        {% block user_menu %}
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Sign out</a>
            </li>
        {% endblock %}
    </ul>
</nav>
<div class="container-fluid" style="margin-top: 50px; padding-top: 20px;">
    <div class="row">
        <div class="col-md-2">
            {% block menu %}{% include ('_include/menu.html.twig') %}{% endblock %}
        </div>
        <div class="col-md-10" id="body_content">
            {% block body_content %}
                <div class="col-12">
                    <div class="card" style="padding: 5px 20px 5px 20px; margin-bottom: 10px;">
                        <h1> {% block body_header %} BODY_HEADER {% endblock %}</h1>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card" style="padding: 5px 20px 5px 20px; margin-bottom: 10px;">
                        <div id="body_actions" class="row">
                            {% block body_actions %}
                                <div id="body_pagination" class="col-md-7 col-xs-12">
                                    {% block body_pagination %}  {% endblock %}
                                </div>
                                <div id="body_buttons" class="col-md-5 text-right">
                                    {% block body_buttons %} {% endblock %}
                                </div>
                            {% endblock %}
                        </div>
                    </div>
                </div>
                <div id="body_block" class="col-12">
                    {% block body %} BODY {% endblock %}
                </div>
                <footer class="col-12">
                    {% block footer %} FOOTER {% endblock %}
                </footer>
            {% endblock %}
        </div>
    </div>
</div>


<style>
    #div-ajax-loader {
        background: url("{{asset('img/ajax-loader-bg.png')}}") repeat scroll 0 0 transparent;
        height: 100%;
        left: 0;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 9999;
        /*display: none;*/
    }
</style>
<div id="div-ajax-loader">
    <div class="row" style="width:300px; height: 70px; margin-top: 275px; margin-left: auto; margin-right:auto">
        <div class="pull-left col-md-2 text-right"><img src="{{ asset('img/ajax-wait.gif') }}"
                                                        style="width: 20px;margin-top: 5px;"></div>
        <div class="pull-left col-md-10"><p style="color: #ffffff;font-size: 18px;">
                <strong>Espere por favor ...</strong>
            </p></div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#div-ajax-loader').hide();
    });
</script>

{% block javascripts %}
    <script src="{{ asset('js/menu.js') }}"></script>
{% endblock %}
</body>
</html>
