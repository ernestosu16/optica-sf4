<button id="btn_filter_form_modal" type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#exampleModalLive">
    <i class="fa fa-filter"></i>
</button>

<div id="exampleModalLive" class="modal fade text-left" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLiveLabel">Filtrar listado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="filter_form" method="get" action=".">
                    {{ form_rest(filters_form) }}
                    <input type="hidden" id="form_filter_order_by" name="order_by" value="{{ order_by }}">
                    <input type="hidden" id="form_filter_order_type" name="order_type" value="{{ order_type }}"/>
                    <input type="hidden" id="form_filter_page" name="page" value="{{ page }}"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="form_filter_submit" form="filter_form" class="btn btn-primary"
                        name="submit-filter" data-dismiss="modal">Filtrar
                </button>
                <button type="reset" id="form_filter_reset" form="filter_form" class="btn btn-default"
                        name="reset-filter" data-dismiss="modal">Borrar
                </button>
                <button type="button" form="filter_form" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>