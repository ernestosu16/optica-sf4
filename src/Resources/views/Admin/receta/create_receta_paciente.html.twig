{% extends base_template %}
{% use '@SonataAdmin/CRUD/base_edit_form.html.twig' with form as parentForm %}

{% block form %}
    {% import "@SonataAdmin/CRUD/base_edit_form_macro.html.twig" as form_helper %}
    {{ sonata_block_render_event('sonata.admin.edit.form.top', { 'admin': admin, 'object': object }) }}

    {# NEXT_MAJOR: remove default filter #}
    {% set url = 'crear_receta_paciente' %}

    {% if not admin.hasRoute(url) %}
        <div>
            {{ "form_not_available"|trans({}, "SonataAdminBundle") }}
        </div>
    {% else %}
        <form
                {% if sonata_admin.adminPool.getOption('form_type') == 'horizontal' %}class="form-horizontal"{% endif %}
                role="form"
                {# NEXT_MAJOR: remove default filter #}
                action="{% block sonata_form_action_url %}{{ admin.generateUrl(url, {'id': id}) }}{% endblock %}"
                {% if form.vars.multipart %} enctype="multipart/form-data"{% endif %}
                method="POST"
                {% if not sonata_admin.adminPool.getOption('html5_validate') %}novalidate="novalidate"{% endif %}
                {% block sonata_form_attributes %}{% endblock %}
        >

            {{ include('@SonataAdmin/Helper/render_form_dismissable_errors.html.twig') }}

            {{ block('sonata_pre_fieldsets') }}
            {{ block('sonata_tab_content') }}
            {{ block('sonata_post_fieldsets') }}
            {{ form_rest(form) }}
            <div class="sonata-ba-form-actions well well-small form-actions">
                <button type="submit" class="btn btn-success" name="btn_create">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Crear Receta
                </button>
            </div>
        </form>
    {% endif %}

    {{ sonata_block_render_event('sonata.admin.edit.form.bottom', { 'admin': admin, 'object': object }) }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.box-title')[0].append('para {{ paciente.nombre }}');

            $('#{{ admin.uniqid }}_numero').parent().addClass('col-md-2');
            $('#{{ admin.uniqid }}_fecha_refraccion').parent().parent().parent().addClass('col-md-2');
            $('#{{ admin.uniqid }}_dp').parent().addClass('col-md-2');
            $('#{{ admin.uniqid }}_add').parent().addClass('col-md-2');
            let input_ojo = {
                "eje_od": {'class': 'col-md-2'},
                "a_visual_od": {'class': 'col-md-2'},
                "cristal_od": {'class': 'col-md-4'},

                "eje_oi": {'class': 'col-md-2'},
                "a_visual_oi": {'class': 'col-md-2'},
                "cristal_oi": {'class': 'col-md-4'}
            };

            for (var k in input_ojo) {
                console.log(k);
                $('#{{ admin.uniqid }}_' + k).parent().addClass(input_ojo[k].class);

            }


        });
    </script>
{% endblock %}