{% extends base_template %}
{% import 'SonataAdminBundle:CRUD:base_show_macro.html.twig' as show_helper %}

{% block show %}
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">
                            Devolver Factura: {{ object.id }}

                        </h4>
                    </div>
                    <div class="box-body">
                        <form method="post">
                            <div class="sonata-ba-collapsed-fields">
                                <div class="form-group">
                                    <label class="control-label" for="s4eb7291eab_fecha">
                                        Descripción
                                    </label>
                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                        <div class="input-group">
                                            <input class="form-control-sm form-control" type="text" name="descripcion"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <input type="submit" class="btn btn-sm btn-success" value="Confirmar la devolución"/>
                            <a class="btn btn-sm btn-danger" href="{{ admin.generateUrl('confirmar_factura') }}">Cancelar la devolución</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}